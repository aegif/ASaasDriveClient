<?xml version="1.0"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi" xmlns:bal="http://schemas.microsoft.com/wix/BalExtension">
  <Bundle 
    Name="Oris4 Sync"
    Version="3.0.0.0" 
    Manufacturer="2nd Act Innovations" 
    IconSourceFile="Pixmaps\cmissync-app.ico"
    UpgradeCode="12F52B78-05B3-4A20-9BAE-2211A807A3E7">

    <Variable Name="InstallFolder" Type="string" Value="[ProgramFilesFolder]Oris4 Sync"/>

    <BootstrapperApplicationRef Id="WixStandardBootstrapperApplication.RtfLargeLicense">
      <bal:WixStandardBootstrapperApplication
          LaunchTarget="[InstallFolder]\Oris4Sync.exe"
          LicenseFile="Installer\license.rtf"
          LogoFile="Installer\logo.png"
          ShowVersion="yes"
          SuppressDowngradeFailure="no"
          SuppressOptionsUI="no"
          SuppressRepair="no"
          ThemeFile="Installer\CustomTheme.xml"
          LocalizationFile="Installer\CustomTheme.wxl"
      />
    </BootstrapperApplicationRef>

    <Chain>
      <PackageGroupRef Id="NetFx45Web" />
      <RollbackBoundary />
      <MsiPackage
          DisplayName="Oris4 Sync Application"
          SourceFile="!(wix.root)\bin\installer\Oris4Sync.msi"
          DisplayInternalUI="no"
          Visible="no"
          Vital="yes"
          Permanent="no">
        <MsiProperty Name="INSTALLDIR" Value="[InstallFolder]" />
      </MsiPackage>
    </Chain>
  </Bundle>
</Wix>
